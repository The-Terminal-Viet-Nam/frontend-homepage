{
  "name": "the-terminal-frontend-homepage",
  "version": "1.0.0",
  "private": true,
  "description": "A website for The Terminal",
  "author": "sunaookamishirokodev",
  "keywords": [
    "nextjs",
    "react",
    "tailwindcss",
    "fast",
    "modern",
    "optimized",
    "developer-friendly"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "lint": "biome lint --write . && eslint .",
    "lint:fix": "biome lint --write . --unsafe && eslint --fix .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "commit": "git cz",
    "prepare": "husky install",
    "build:prepare": "pnpm run typecheck && pnpm run lint && pnpm run format && pnpm run check && pnpm run build"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "@radix-ui/react-accordion": "^1.2.10",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@serwist/next": "^9.0.13",
    "@tabler/icons-react": "^3.31.0",
    "@tanstack/react-query": "5",
    "@tsparticles/engine": "^3.8.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.8.1",
    "@vercel/analytics": "^1.5.0",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.508.0",
    "motion": "^12.9.6",
    "next": "15.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.4",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@tanstack/eslint-plugin-query": "^5.74.7",
    "@tanstack/react-query-devtools": "^5.75.4",
    "@types/axios": "^0.14.4",
    "@types/node": "22.15.17",
    "@types/react": "19.1.2",
    "@types/react-dom": "^19.1.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "serwist": "^9.0.14",
    "tailwindcss": "^4.1.5",
    "typescript": "^5"
  },
  "overrides": {
    "motion": {
      "react": "19.0.0-rc-66855b96-20241106",
      "react-dom": "19.0.0-rc-66855b96-20241106"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx --no -- commitlint --edit $1",
      "pre-commit": "npx --no -- lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["biome lint --write ."],
    "*.{json,css,html,md}": ["biome format --write ."]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
